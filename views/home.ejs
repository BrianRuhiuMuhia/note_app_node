<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Notes</title>
</head>
<style>
    body{
        margin:0;
        padding:0;
        background-color: aliceblue;
        display:flex;
        flex-direction: column;
        font-size: 1.2em;
    }
    h1,h2,h3,h4{
        margin:0;
        padding:0;
    }
    .page{
        display:flex;
        flex-direction: row;
        width:100%;
        font-family:Arial, Helvetica, sans-serif;
    }
    .user-details{
padding:0.5em;
font-size: 2em;
    }
    .user-notes{
   margin:0 auto;
 
   width:80%;

    }
    .element{
        display:flex;
        flex-direction:row;
        margin-block:1em;
        border:solid 2px lime;
        padding-block:1em;
      
        align-items:center;
      justify-content: space-around;
    }
    .text{
        width:50px;
    }
    button{
        width:80px;
        border-radius: 10px;
        padding:0.5em;
        border-width:0;
    }
    .delBtn{
background-color: red;
    }
    .viewBtn{
background-color: lime;
    }
    .updateBtn{
background-color: aqua;
    }
    .view-page{
position:absolute;
width:50%;
left:70%;
height:200px;
transform:translate(-50%,-50%);
bottom:0%;
background-color: white;
border-radius: 10px;
-webkit-box-shadow: 5px 5px 0px 0px #289FED, 10px 10px 0px 0px #5FB8FF, 15px 15px 0px 0px #A1D8FF, 20px 20px 0px 0px #CAE6FF, 25px 25px 0px 0px #E1EEFF, 5px 5px 15px 5px rgba(0,0,0,0); 
box-shadow: 5px 5px 0px 0px #289FED, 10px 10px 0px 0px #5FB8FF, 15px 15px 0px 0px #A1D8FF, 20px 20px 0px 0px #CAE6FF, 25px 25px 0px 0px #E1EEFF, 5px 5px 15px 5px rgba(0,0,0,0);
padding:1em;
    }
    .hidden{
        display:none;
    }
    .visible{
        display:block;
    }
    .update-form{
        display:flex;
        width:200px;
        height:200px;
padding:1em;
        flex-direction:column;
        gap:0.5em;
        border:solid 2px black;
    }

</style>
<body>
    <div class="page">
    <div class="user-details"></div>
    <div class="user-notes"></div>
    </div>
    <div class="view-page">
        <span class="title"></span>
        <p class="view-text"></p>
        </div>
        <div>
            <form class="update-form">
                <h4>Update Note</h4>
                <label>Title</label>
                <input type="text" class="update-title">
                <label>Text</label>
                <textarea></textarea>
                <button class="updateBtn">Submit</button>
            </form>
        </div>
    <script>
        const userNotes=document.querySelector(".user-notes")
        const userDetails=document.querySelector(".user-details")
        const userText=document.querySelector(".text")
        let details=undefined
        let user=undefined;
        let delBtns=undefined
        let viewBtn=undefined
        
async function getAllNotes()
{
    const data=await fetch("/allNotes",{
        method:"get"
    })
    const result=await data.json()
    return result
}
getAllNotes().then((obj)=>{

details=obj["result"]
user=obj["user"]
displayNotesOnPage(details,userNotes)
displayUserOnPage(user,userDetails)
})
function displayNotesOnPage(arr,page)
{
arr.forEach((element)=>{
    const text='<div class="element">'+ '<span class="text">'+element.title+'</span>' + '<button class="delBtn">'+"Delete"+'</button>'+'<button class="updateBtn">'+"Update"+"</button>"+'<button class="viewBtn">'+"View"+"</button>"+"</div>"
    page.innerHTML+=text;
})
delBtns=document.querySelectorAll(".delBtn")
viewBtn=document.querySelectorAll(".viewBtn")
btnDelete()
addUserView()
}
function displayUserOnPage(user,page)
{
page.textContent="Welcome back" +" "+ user["name"]
}
function btnDelete()
{
    delBtns.forEach((element,index)=>{
    element.addEventListener('click',function(event)
    {
event.preventDefault()
deleteFromServer(index).then((page)=>{
    location.href=page["route"]
})
    })
})
}
async function deleteFromServer(id)
{
  const record=details[id]
   const page= await fetch(`/${record["id"]}`,{
    method:"DELETE",
    headers:{
        "Content-type":"application/json"
    },
    body:JSON.stringify(record)
})
return await page.json()
}
function addUserView()
{
    let viewTitle=document.querySelector(".title")
    let viewPage=document.querySelector(".view-text")
    console.log(viewPage)
    viewBtn.forEach((btn,index)=>{
        btn.addEventListener("click",function(event)
        {
event.preventDefault()
viewTitle.textContent=details[index]["title"]
viewPage.textContent=details[index]["text"]
        })
    })
}
    </script>
</body>
</html>